{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "docs",
  ],
  "include": [
    "./src"
  ]
}
